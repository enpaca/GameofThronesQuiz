    <!--Second question.-->
    <string name="secondQuestion">2. What was the name of the woman who kept telling Jon Snow he knows nothing?</string>
    <!--Second question first option-->
    <string name="firstOptionOfQuestionTwo">Ygritte</string>
    <!--Second question second option-->
    <string name="secondOptionOfQuestionTwo">Catleyn </string>


    <!--Third question-->
    <string name="thirdQuestion">3. How many times has Sansa Stark been married?</string>
