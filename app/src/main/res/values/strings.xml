    <string name="firstOptionOfQuestionOne">Rivers</string>
    <!--First question second option-->
    <string name="secondOptionOfQuestionOne">Waters</string>
    <!--First question third option-->
    <string name="thirdOptionOfQuestionOne">Sand</string>
    <!--First question fourth option-->
