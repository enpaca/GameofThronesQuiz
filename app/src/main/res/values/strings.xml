<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <string name="app_name">Game of Thrones Quiz</string>

    <!--Title of the quiz-->
    <string name="introduction">Can you answer these 6 quiz questions correctly?</string>

    <!--First question.-->
    <string name="firstQuestion">1. What is the surname given to bastards born in Dorne?</string>
