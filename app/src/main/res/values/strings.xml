    <!--Toast message if all the answers are correct-->
    <string name="toastMessageCorrect">Awesome! All your answers are correct.</string>
    <!--Toast message if number of correct answers is more than one-->
    <string name="toastMessageMoreThanOne">Out of <xliff:g id="number_of_questions">%d</xliff:g> questions,
    <xliff:g id="number_of_correct_answers">%d</xliff:g> are correct.</string>
    <!--Toast message if number of correct answers is equal to one-->
    <string name="toastMessageEqualToOne">Out of <xliff:g id="number_of_questions">%d</xliff:g> questions
        , only <xliff:g id="number_of_correct_answers">%d</xliff:g> is correct.</string>
    <!--Toast message if there are no correct answers.-->
    <string name="toastMessageZero">None of the answers are correct, try again!</string>

    <!--Text of button-->
    <string name="buttonCheck">Check</string>
